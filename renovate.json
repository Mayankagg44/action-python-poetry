{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "labels": ["renovate"],
  "hostRules": [
    {
      "hostType": "github",
      "matchHost": "github.com"
    }
  ],
  "repositories": [
    {
      "extends": [
        "config:base"
      ],
      "packageRules": [
        {
          "groupName": "baseconfig-packages",
          "lockFileMaintenance": {
            "enabled": true
          }
        }
      ],
      "regexManagers": [
        {
          "datasourceTemplate": "Mayankagg44/action-python-poetry",
          "fileMatch": ["(^|/)pyproject\\.toml$"]
        }
      ],
    "enabledManagers": ["poetry","github-actions"],
    "commitMessagePrefix": "fix:",
    "commitMessageTopic": "dependencies",
    "schedule": ["on the first day of the month"]
    },
  {
    "hostRules": [
      {
        "hostType": "github",
        "matchHost": "github.com"
      }
    ],
    "extends": [
      "config:base",
      "config:python"
    ],
    "regexManagers": [
      {
        "datasourceTemplate": "Mayankagg44/sync_with_poetry",
        "fileMatch": ["(^|/)pyproject\\.toml$"]
      }
    ],
    "packageRules": [
      {
        "packageNames": ["terraform"],
        "groupName": "2nd repo package"
      }
    ],
    "enabledManagers": ["poetry"]
    }
  ]
}
